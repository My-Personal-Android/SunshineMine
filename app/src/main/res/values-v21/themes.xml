<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SunshineMine" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="toolbarStyle">@style/Theme.SunshineMine.Toolbar</item>
        <item name="android:windowActivityTransitions">true</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="android:windowDrawsSystemBarBackgrounds">false</item>
    </style>

    <style name="Theme.SunshineMine.Toolbar" parent="Widget.AppCompat.Toolbar">
        <!-- Primary brand color. -->
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <style name="Theme.SunshineMine.Main" parent="@style/Theme.SunshineMine">
        <item name="android:windowContentTransitions">true</item>
    </style>

    <style name="Theme.SunshineMine.Details" parent="@style/Theme.SunshineMine">
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowEnterTransition">@transition/details_window_enter_transition</item>
        <item name="android:windowReturnTransition">@transition/details_window_return_transition</item>
    </style>
</resources>