<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="#f4f4f4"
    android:layout_height="match_parent">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/sample_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        tools:ignore="MissingConstraints">
    </androidx.appcompat.widget.Toolbar>
    <RelativeLayout
        android:layout_marginTop="14dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:layout_margin="28dp"
            android:id="@+id/Pallet_Detials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:divider="@android:color/transparent"
            android:dividerHeight="0.0px"
            android:elevation="8dp"
            android:clipToPadding="false"
            android:clipChildren="false"
            card_view:cardElevation="4dp"
            card_view:cardPreventCornerOverlap="false"
            card_view:cardCornerRadius="3dp"
            tools:ignore="MissingConstraints">
            <LinearLayout
                android:layout_below="@id/sample_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:weightSum="5">

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="3">
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/white"
                        android:theme="@style/ThemeOverlay.AppCompat.Light">
                    </androidx.appcompat.widget.Toolbar>

                    <RelativeLayout
                        android:layout_below="@id/toolbar"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">


                    <androidx.gridlayout.widget.GridLayout
                        android:paddingBottom="?attr/actionBarSize"
                        android:id="@+id/detail_grid_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="3"
                        android:layout_centerVertical="true"
                        android:background="@android:color/white"
                        app:columnCount="2">

                        <TextView
                            android:id="@+id/detail_day_textview"
                            android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                            android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
                            android:fontFamily="sans-serif"
                            android:gravity="right"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/secondary_text"
                            app:layout_columnSpan="1"
                            android:layout_marginRight="12dp"
                            app:layout_columnWeight="1"
                            app:layout_gravity="fill_horizontal"
                            tools:text="Today, April 03"/>
                        <TextView
                            android:id="@+id/date_textview"
                            android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                            android:layout_marginTop="@dimen/abc_list_item_padding_horizontal_material"
                            android:fontFamily="sans-serif"
                            android:gravity="left"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/secondary_text"
                            app:layout_columnSpan="1"
                            app:layout_columnWeight="1"
                            app:layout_gravity="fill_horizontal"
                            tools:text="Today, April 03"/>

                        <ImageView
                            android:id="@+id/detail_icon"
                            android:layout_width="0dp"
                            android:adjustViewBounds="true"
                            android:maxHeight="@dimen/today_icon"
                            android:maxWidth="@dimen/today_icon"
                            android:transitionName="@string/detail_icon_transition_name"
                            app:layout_columnWeight="1"
                            app:layout_gravity="fill_horizontal"
                            tools:src="@drawable/art_clouds"/>

                        <TextView
                            android:id="@+id/high_textview"
                            android:layout_width="0dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_horizontal"
                            android:textColor="@color/primary_text"
                            android:textSize="72sp"
                            app:layout_columnWeight="1"
                            app:layout_gravity="fill_horizontal"
                            tools:text="19"/>

                        <TextView
                            android:id="@+id/forecast_textview"
                            android:layout_width="0dp"
                            android:fontFamily="sans-serif"
                            android:gravity="center_horizontal"
                            android:textAppearance="@style/TextAppearance.AppCompat.Title"
                            android:textColor="@color/secondary_text"
                            app:layout_columnWeight="1"
                            tools:text="Rainy"/>

                        <TextView
                            android:id="@+id/low_textview"
                            android:layout_width="0dp"
                            android:layout_marginBottom="@dimen/abc_list_item_padding_horizontal_material"
                            android:fontFamily="sans-serif-light"
                            android:gravity="center_horizontal"
                            android:textColor="@color/secondary_text"
                            android:textSize="36sp"
                            app:layout_columnWeight="1"
                            tools:text="10"/>


                    </androidx.gridlayout.widget.GridLayout>
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_below="@id/detail_grid_1"
                    android:layout_width="0dp"
                    android:background="@color/detail_accent_pane_background"
                    android:layout_height="match_parent"
                    android:layout_weight="2">
                    <androidx.appcompat.widget.Toolbar
                        android:id="@+id/extra"
                        android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize"
                        android:background="@color/detail_accent_pane_background"
                        android:theme="@style/ThemeOverlay.AppCompat.Light">
                    </androidx.appcompat.widget.Toolbar>
                    <RelativeLayout
                        android:layout_below="@id/extra"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <androidx.gridlayout.widget.GridLayout
                            android:paddingBottom="?attr/actionBarSize"
                            android:layout_centerVertical="true"
                            android:id="@+id/detail_grid_2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/forecast_detail_horizontal_padding"
                            android:paddingRight="@dimen/forecast_detail_horizontal_padding"
                            app:columnCount="2">

                            <TextView

                                android:id="@+id/detail_humidity_label_textview"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:text="@string/humidity"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="@color/detail_accent_label"
                                app:layout_columnWeight="1"
                                app:layout_gravity="fill"
                                android:padding="24dp"
                                />

                            <TextView
                                android:id="@+id/detail_humidity_textview"
                                android:gravity="center_vertical"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="@android:color/white"
                                app:layout_gravity="fill"
                                tools:text="38%"/>

                            <TextView
                                android:id="@+id/detail_pressure_label_textview"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:text="@string/pressure"
                                android:textAppearance="@style/TextAppearance.AppCompat.Title"
                                android:textColor="@color/detail_accent_label"
                                app:layout_gravity="fill"
                                android:padding="24dp"
                                />

                            <TextView
                                android:id="@+id/detail_pressure_textview"
                                android:gravity="center_vertical"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="@android:color/white"
                                app:layout_gravity="fill"
                                tools:text="995 hPa"/>

                            <TextView
                                android:id="@+id/detail_wind_label_textview"
                                android:fontFamily="sans-serif"
                                android:gravity="center_vertical"
                                android:text="@string/wind"
                                android:textColor="@color/detail_accent_label"
                                android:textSize="20sp"
                                android:padding="24dp"
                                app:layout_gravity="fill"
                                />


                            <TextView
                                android:id="@+id/detail_wind_textview"
                                android:gravity="center_vertical"
                                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                                android:textColor="@android:color/white"
                                app:layout_gravity="fill"
                                tools:text="4km/h NW"/>
                        </androidx.gridlayout.widget.GridLayout>
                    </RelativeLayout>


                </RelativeLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>


    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
